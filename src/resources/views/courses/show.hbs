<div class="info-course pt-4" style="margin-top:98px">

  <div class="row">
    <figure class="mx-4 col-sm-6 col-md-6 col-lg-6" style="width:100%; max-width:320px">
      <img style="max-width:300px" src="{{course.image}}" alt="" />
    </figure>

    <div class="wp-course-body w-100 col-sm-6 col-md-6 col-lg-6 ml-4">
      <h2 class="text-light mb-3 text-uppercase">{{course.name}}</h2>
      <div class="main-start my-2">
        <span><i class="fa-solid fa-star"></i></span>
