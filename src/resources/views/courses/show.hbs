      <span class="text-light mb-3 fs-4">{{course.price}}</span>

      <div class="mb-3 quantity">
        <label class="text-light">Số lượng:</label>
        <input type="number" name="quantity" class="p-1 fs-3" step="1" min="0" max="99" id="" value="1" />
        <span class="text-light ml-3">Sản phẩm còn lại: 39</span>
        <button type="button " class="btn btn-success d-block mt-3" style="border-radius: 5px;"><i
            class="fa-solid fa-cart-arrow-down mr-2"></i>Thêm giỏ hàng</button>
      </div>
    </div>
  </div>

  <div class="decsription text-light">
    <h3 class="decsription-title bg-secondary p-2">Mô tả sản phẩm</h3>
    <p class="decsription-content ml-5">
      {{course.decs}}</br>

      
